---
import { getLanguageFromUrl, languages } from '../i18n/utils';

const { pathname } = Astro.url;
const lang = getLanguageFromUrl(pathname);
const t = (key: string) => key.split('.').reduce((obj: any, k) => obj?.[k], languages[lang]) || key;
---


<section id="about" class="bg-white min-h-screen pt-12">
    <div class="container mx-auto px-4">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-black text-left">Про нас</h1>
        </div>
        <div class="grid lg:grid-cols-2 gap-12 items-center">
            <!-- Image Section -->
            <div class="relative aspect-4/3 bg-black/10 rounded-lg overflow-hidden">
                <img 
                    src="/images/team-photo.jpg" 
                    alt="DragonLab Team" 
                    class="object-cover w-full h-full"
                />
            </div>
            <!-- Content Section -->
            <div class="text-black space-y-6">
                <h2 class="text-xl font-bold mb-2">{t('about.welcome')}</h2>
                <p class="text-base mb-2">{t('about.description')}</p>
                <p class="text-base mb-6">{t('about.impact')}</p>
                <div class="flex flex-row gap-12 items-end mb-6">
                    <div class="text-center">
                        <div class="text-5xl font-bold text-black mb-1">650</div>
                        <div class="text-sm text-black/80">{t('about.stats.delivered')}</div>
                    </div>
                    <div class="text-center">
                        <div class="text-5xl font-bold text-black mb-1">35-40</div>
                        <div class="text-sm text-black/80">{t('about.stats.monthly')}</div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Banner Motto -->
        <div class="w-full bg-black py-5 mt-8">
            <h2 class="text-2xl font-bold text-white text-center tracking-wide">{t('about.motto')}</h2>
        </div>
        <!-- Mission Section -->
        <div class="w-full bg-emerald-950 py-12 mt-0 flex flex-col lg:flex-row items-center justify-center">
            <div class="flex-1 text-white text-center lg:text-right px-4 mb-8 lg:mb-0">
                <h3 class="text-2xl font-bold mb-4">{t('about.mission.title')}</h3>
            </div>
            <div class="flex-1 px-4">
                <ul class="space-y-4 text-white text-left text-lg">
                    {t('about.mission.points').map((point: string) => (
                        <li class="flex items-center">
                            <span class="text-white mr-3">•</span>
                            {point}
                        </li>
                    ))}
                </ul>
            </div>
        </div>
    </div>
</section>

<style>
    .aspect-4/3 {
        aspect-ratio: 4/3;
    }
</style>